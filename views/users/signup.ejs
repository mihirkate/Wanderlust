<style>
  .signup_form_div {
    min-height: 100vh;
    max-width: 600px;
    margin: 2rem auto;
  }

  .signup_form_div form {
    width: 100%;
  }

  .signup_particular_div {
    display: flex;
    flex-direction: column;
    margin-bottom: 2rem;
  }

  .signup_particular_div label {
    font-size: 1.5rem;
  }

  .signup_particular_div input {
    padding: 1rem;
    font-size: 1.25rem;
  }

  .signup_form_div button {
    width: 100%;
    font-size: 2rem;
    border-radius: 10px;
    outline: none;
    border: none;
    color: #fff;
    background-color: #000;
    padding: 1rem;
  }

  /***************************** responsive layout css *****************************/
  @media (max-width: 700px) {
    .signup_form_div {
      max-width: 400px;
    }

    .signup_particular_div label {
      font-size: 1.25rem;
    }

    .signup_particular_div input {
      font-size: 1rem;
    }

    .signup_form_div button {
      font-size: 1.5rem;
    }
  }

  @media (max-width: 450px) {
    .signup_form_div {
      max-width: 290px;
    }

    .signup_particular_div input {
      padding: 0.5rem;
    }

    .signup_form_div button {
      font-size: 1rem;
    }
  }
</style>
<% layout("layouts/boilerplate.ejs") %>

<div class="signup_form_div">
  <form action="/signup" method="post" class="needs-validation" novalidate>
    <div class="signup_particular_div">
      <label for="username" class="form-label">Username</label>
      <input
        type="text"
        placeholder="Enter your name"
        name="username"
        class="form-control"
        autocomplete="off"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="signup_particular_div">
      <label for="email" class="form-label">Email</label>
      <input
        type="email"
        class="form-control"
        name="email"
        placeholder="Enter your email"
        autocomplete="off"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <div class="signup_particular_div">
      <label for="password" class="form-label">Password</label>
      <input
        type="password"
        class="form-control"
        name="password"
        placeholder="Enter strong password"
        autocomplete="off"
        required
      />
      <div class="valid-feedback">Looks good!</div>
    </div>
    <button class="btn btn-success">SignUp</button>
  </form>
</div>
